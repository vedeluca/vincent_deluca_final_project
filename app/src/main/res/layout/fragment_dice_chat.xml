<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DiceChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dice_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/dice_buttons"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/dice_buttons"
        layout="@layout/dice_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>